<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:paddingTop="5dp"
    >
<TextView
    android:textSize="18dp"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="Line Name"
    android:id="@+id/line_list_item_name"
    android:layout_alignParentLeft="true"
    />

    <TextView
        android:id="@+id/line_list_item_bonus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Bonus"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>

    <RelativeLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >
        <TextView
            android:id="@+id/line_list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Description"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/line_list_item_cars_required"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cars Required"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >
        <TextView
            android:id="@+id/line_list_item_eta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ETA: "
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    </LinearLayout>
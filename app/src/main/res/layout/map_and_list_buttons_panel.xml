<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/driver_show_map_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/driver_button_map_list_active"
        android:drawablePadding="-12dp"
        android:drawableTop="@drawable/ic_map_black_24dp"
        android:padding="-10dp"
        android:paddingTop="9dp"
        android:text="Map"
        android:textSize="9dp" />

    <Button
        android:id="@+id/driver_show_list_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/driver_button_map_list_inactive"
        android:drawablePadding="-12dp"
        android:drawableTop="@drawable/ic_list_black_24dp"
        android:padding="-10dp"
        android:paddingTop="9dp"
        android:text="List"
        android:textSize="9dp" />

</LinearLayout>